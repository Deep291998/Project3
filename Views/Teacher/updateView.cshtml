        <label for="employeenumber">Email:</label>
        <input type="text" id="employeenumber" name="employeenumber" value="@Model.EmployeeNumber" />
    </div>
    <div class="inputrow">
        <label for="salary">Biography:</label>
        <div>
            <textarea id="salary" name="salary">@Model.Salary</textarea>
